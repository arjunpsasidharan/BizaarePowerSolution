<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:fillViewport="true"
    android:background="#d9ffdd">
    <RelativeLayout android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BIZARRE POWER SOLUTIONS "
            style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:id="@+id/comptitle"
            android:textColor="#FF2FB036"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_height="wrap_content"
            android:text="an ultimate power provider"
            android:id="@+id/textView"
            android:layout_below="@+id/comptitle"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp"
            android:textColor="#FFF27814" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:text="@string/firstdesc"
            style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_marginTop="39dp"
            android:gravity="fill_horizontal"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/desc2"
            android:id="@+id/textView3"
            android:layout_below="@+id/textView2"
            android:layout_alignLeft="@+id/comptitle"
            android:layout_alignStart="@+id/comptitle"
            android:textStyle="normal|bold"
            android:typeface="sans"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Our Vision"
            android:id="@+id/vision"
            android:layout_below="@id/textView3"

            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:textColor="#FF2FB036" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vision"
            android:id="@+id/visiondesc"
          android:layout_below="@id/vision"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Our Mission"
            android:id="@+id/mission"

          android:layout_below="@id/visiondesc"
            android:layout_marginLeft="10dp"
            style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:textColor="#FF2FB036"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mission"
            android:id="@+id/missiondesc"
            android:layout_below="@id/mission"
            android:layout_marginTop="10dp"
android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold" />


    </RelativeLayout>

</ScrollView>