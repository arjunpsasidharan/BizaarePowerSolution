<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fdfdfe">

    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/itemheading"

        android:layout_alignParentTop="true"

        android:layout_gravity="top"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:text="Products &amp; Services\n UPS &amp; Inverters"
        android:background="#89bf74"
        android:textColor="#FFEAEAEA"
        android:textSize="25sp"
        android:paddingLeft="10dp"
        android:paddingTop="1dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:layout_marginLeft="25dp"

        android:layout_marginRight="25dp"
        android:id="@+id/next"

        android:src="@android:drawable/ic_media_ff"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/linear"
        android:layout_alignStart="@+id/linear" />

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemheading"

        android:id="@+id/mygrid1"
        android:weightSum="1"
        android:layout_marginTop="20dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp">
        <ImageView


            android:id="@+id/image1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight=".5"


            android:src="@drawable/ups1"
            android:adjustViewBounds="false"
            android:longClickable="true"
            android:clickable="true" />

        <ImageView
            android:layout_weight=".5"


            android:id="@+id/image2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"





            android:src="@drawable/ups2"

            android:clickable="true"
            android:longClickable="true" /></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linear"

        android:layout_below="@id/mygrid1"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_above="@+id/next">
        <ImageView
            android:layout_weight=".5"
            android:id="@+id/image3"

            android:layout_height="wrap_content"
            android:layout_width="match_parent"



            android:src="@drawable/ups3"
            android:longClickable="true"
            android:clickable="true" />
        <ImageView
            android:layout_weight=".5"
            android:id="@+id/image4"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"

            android:src="@drawable/ups4"

            android:clickable="true" />


    </LinearLayout>

</RelativeLayout>


