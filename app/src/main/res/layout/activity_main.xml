<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:focusable="false"
    android:background="#fdfdfe"
    >

    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header"
        android:src="@drawable/header"
        android:layout_marginBottom="10dp"
        android:layout_alignParentTop="true"
        android:scaleType="fitStart"
        android:layout_gravity="top"
        android:adjustViewBounds="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/footer"
        android:adjustViewBounds="true"
        android:id="@+id/footer"
        android:scaleType="fitEnd"
        />

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"

        android:id="@+id/mygrid1"
        android:weightSum="1"
        android:layout_marginTop="40dp">
        <ImageButton


            android:id="@+id/gallery"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight=".5"

            style="@style/Base.Widget.AppCompat.Button"
            android:src="@drawable/productandserv"
            android:adjustViewBounds="false"
            android:longClickable="true"
            android:clickable="true" />

        <ImageButton
            android:layout_weight=".5"


            android:id="@+id/testimonials"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"


            style="@style/Base.Widget.AppCompat.Button"


            android:src="@drawable/testimonials"

            android:clickable="true"
            android:longClickable="true" /></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linear"
        android:layout_marginTop="10dp"
        android:layout_above="@id/footer"
        android:layout_below="@id/mygrid1">
        <ImageButton
            android:layout_weight=".5"
            android:id="@+id/aboutus"

            android:layout_height="wrap_content"
            android:layout_width="match_parent"

            style="@style/Base.Widget.AppCompat.Button"

            android:src="@drawable/info"
            android:longClickable="true"
            android:clickable="true" />
        <ImageButton
            android:layout_weight=".5"
            android:id="@+id/contactus"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            style="@style/Base.Widget.AppCompat.Button"
            android:src="@drawable/contactus"
            android:longClickable="true"
            android:clickable="true" />


    </LinearLayout>

</RelativeLayout>
